<link rel="stylesheet" href="/css/chart.css"> {{> metrosidebar}}
<div class="shifted-content h-100 p-ab">
    {{> metroappbar}}

    <div class="h-100 p-4">
        <p class="h1">{{{pageTitle}}}</p>
        <button class="button alert drop-shadow" id="btn-add-portfolio">
            <span class="mif-plus"></span> Add Portfolio
        </button>
        <table class="table" id="portfolio-summary">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Select</th>
                    <th>Modify/Remove</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
        <p class="h2">Portfolio Details</p>
        {{!--
        <ul class="bottom" data-role="tabs">
            <li>Positions</li>
            <li>Transactions</li>
            <li>Graphs</li>
        </ul> --}}
        <div id="portfolio-details-panel">
            <button id="btn-positions" class="button drop-shadow success" disabled>Positions</button>
            <button id="btn-transactions" class="button drop-shadow success" disabled>Transactions</button>
            <button id="btn-graphs" class="button drop-shadow success" disabled>Graphs</button>
        </div>
        <div id="portfolio-details">
            <table class="table" id="portfolio-details-long"></table>
            <table class="table" id="portfolio-details-short"></table>
            <table class="table" id="portfolio-details-closed"></table>
            <table class="table" id="portfolio-details-txn"></table>
            <div id="portfolio-charts">
                <div id="mktValue-chart-container"></div>
                <div id="pl-chart-control" style="display:none;">
                    <button class="button secondary outline">long</button>
                    <button class="button secondary outline">short</button>
                    <button class="button secondary outline">closed</button>
                    </ul>
                </div>
                <div id="pl-chart-container"></div>
            </div>
        </div>
    </div>
    {{> metrojs}}

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>
    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script src="js/lib/moment.min.js"></script>
    <script src="js/portfolioService.js"></script>