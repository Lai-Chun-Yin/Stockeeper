        <div class="auth-form">
            <form id="signup-form" action="/signup" method="POST" data-role="validator" data-interactive-check="true">
                <div class="form-group">
                    <h3>Sign Up</h3>
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name="username" placeholder="Enter email" />
                    <span class="invalid_feedback">
                        Entered email is either not valid or registered already.
                    </span>
                    <small class="text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" placeholder="Enter password" data-validate="required" />
                    <span class="invalid_feedback">
                        Setting up password is required.
                    </span>
                </div>
                <div class="form-group">
                    <label>Retype password</label>
                    <input type="password" name="retype-password" 
                    placeholder="Retype password" data-validate="required compare=password" />
                    <span class="invalid_feedback">
                        Retyped password does not match the first entry.
                    </span>
                </div>
                <div class="form-group">
                    <button class="button alert rounded">Sign Up</button>
                    <input type="button" class="button rounded" value="Cancel" onclick="location.href='/welcome'">
                </div>
            </form>
